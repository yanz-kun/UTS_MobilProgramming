<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.politeknikharber.uts_mobile_programing_afi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTS_Mobile_Programing_Afi">
        <activity android:name=".login.LoginActivity"></activity>

        <activity android:name=".pendidikan.DetailPendidikan"
            android:parentActivityName=".pendidikan.Pendidikan"/>

        <activity android:name=".pendidikan.Pendidikan"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".calculator.HasilKalkuator"
            android:parentActivityName=".calculator.Calculator" />

        <activity
            android:name=".calculator.Calculator"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".about.TentangUTS"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>