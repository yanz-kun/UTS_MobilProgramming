<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_gambar_list_pendidikan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_judul_list_pendidikan"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_gambar_list_pendidikan"
            android:text="Judul"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_des_list_pendidikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:layout_toRightOf="@id/iv_gambar_list_pendidikan"
            android:layout_below="@id/tv_judul_list_pendidikan"
            android:layout_marginLeft="10dp"
            android:maxLength="100"
            android:textSize="15sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>